{
  // Just to help type inference where is due
  "compilerOptions": {

    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "keyofStringsOnly": true,
    "allowJs": true,
    "checkJs": true,
    //"emitDeclarationOnly": true,
    "noEmit": true,

    "lib": [
      "WebWorker",
       "es6", "dom", "dom.iterable"

    ],
    "types": [
      "jstree",
      "jquery",
      "datatables.net",
      "codemirror",
      "select2",
      "workbox-sw"
    ],
    "typeRoots": ["assets/types"]
  

  },
  
  "exclude": ["node_modules"],
  "include": [
    "assets/*.ts",
    "assets/js/*.js",
    "assets/**/*.ts"

  ]
 
} 